<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_bg"
    android:elevation="3dp"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/patient_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Patient Name"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="44:44" />


    <RelativeLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_desc">

        <TextView
            android:id="@+id/text_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Building Number : "
            android:layout_alignParentLeft="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_buiding_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_building"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floor Number  "
            android:layout_toLeftOf="@+id/text_floor_number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_floor_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_add2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_address">

        <TextView
            android:id="@+id/text_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Number  "
            android:layout_alignParentLeft="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_room"
            android:text="35"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bed Number  "
            android:layout_toLeftOf="@+id/text_bed_number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_bed_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="25"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll_add2"
        android:background="#fff" />

</RelativeLayout>